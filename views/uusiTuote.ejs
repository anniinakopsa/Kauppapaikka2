<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('head'); -%>
</head>
<body class="container">

    <header>
        <%- include('navigation'); -%>
    </header>
    
    <main>
        <% if (typeof successMessage !== 'undefined') { %>
            <div class="alert alert-success">
                <%= successMessage %>
            </div>
        <% } %>
        <div class="product-form">
            <h2>Lisää uusi tuote</h2>
            <form action="/admin/tuote/lisaa" method="GET">
                <div class="form-group">
                    <label for="tuoteid">Tuote ID</label>
                    <input type="text" class="form-control" id="tuoteid" name="tuoteid" required>
                </div>
                <div class="form-group">
                    <label for="nimi">Nimi</label>
                    <input type="text" class="form-control" id="nimi" name="nimi" required>
                </div>
                <div class="form-group">
                    <label for="hinta">Hinta</label>
                    <input type="number" class="form-control" id="hinta" name="hinta" required>
                </div>
                <div class="form-group">
                    <label for="lisatiedot">Lisätiedot</label>
                    <textarea class="form-control" id="lisatiedot" name="lisatiedot" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Lisää tuote</button>
            </form>
        </div>
    </main>

    <footer>
        <%- include('footer'); -%>
    </footer>
</body>
</html>